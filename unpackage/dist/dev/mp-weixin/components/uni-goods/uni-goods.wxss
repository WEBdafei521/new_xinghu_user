.goods_list {
  width: 100%;
  height: 318rpx;
  background: whitesmoke;
}
.goods_list .goods_item {
  width: 695rpx;
  height: 156rpx;
  background: white;
  border-radius: 14px;
  margin-bottom: 20rpx;
}
.goods_list .goods_item image {
  width: 164rpx;
  height: 156rpx;
  border-radius: 14px;
  background-color: gray;
}
.goods_list .goods_item .content {
  height: 156rpx;
}
.goods_list .goods_item .content .msg {
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.goods_list .goods_item .content .msg .name {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333333;
  margin-left: 15rpx;
}
.goods_list .goods_item .content .msg .tag {
  width: 57rpx;
  height: 24rpx;
  background: -webkit-linear-gradient(left, #8abeff 0%, #1b66ff 100%);
  background: linear-gradient(90deg, #8abeff 0%, #1b66ff 100%);
  border-radius: 7px;
  font-size: 16rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: white;
  text-align: center;
  line-height: 24rpx;
}
.goods_list .goods_item .content .msg .btm_msg {
  height: 45rpx;
