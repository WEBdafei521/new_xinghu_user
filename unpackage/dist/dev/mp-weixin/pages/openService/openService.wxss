}
.top_num {
  font-size: 27rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #e5c99b;
  background: -webkit-linear-gradient(bottom, #f8e1b4 0%, #c19962 100%);
  background: linear-gradient(0deg, #f8e1b4 0%, #c19962 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}
.top_text {
  font-size: 21rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #b8b8b8;
}
